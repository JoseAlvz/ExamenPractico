{{>header}}
<div class="container">
    <center><h1>Algunos De Mis Pintores favoritos </h1></center>
    {{#if pintores}}
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Escuela</td>
                    <td>Nacionalidad</td>
                    <td>Pintura</td>
                    <td>Imagen</td>
                </tr>
            </thead>
            <tbody>
                {{#each pintores}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{escuela}}</td>
                    <td>{{nacionalidad}}</td>
                    <td>{{pintura}}</td>
                    <td><img src="../imagenes/{{pintura}}" height="400" width="275"> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div>no se encuentran pintores</div>
    {{/if}}
</div>